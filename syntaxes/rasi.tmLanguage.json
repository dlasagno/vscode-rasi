{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Rasi",
	"scopeName": "source.rasi",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#escapes"
		},
		{
			"include": "#combinators"
		},
		{
			"include": "#selector"
		},
		{
			"include": "#at-rules"
		},
		{
			"include": "#rule-list"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.block.rasi",
					"begin": "/\\*",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.rasi"
						}
					},
					"end": "\\*/",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.comment.rasi"
						}
					}
				},
				{
					"name": "comment.line.rasi",
					"begin": "//",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.rasi"
						}
					},
					"end": "$"
				}
			]
		},
		"at-rules": {
			"patterns": [
				{
					"begin": "(?i)((@)import)(?:\\s+|$|(?=['\"]|/\\*))",
					"beginCaptures": {
						"1": {
							"name": "keyword.control.at-rule.import.rasi"
						},
						"2": {
							"name": "punctuation.definition.keyword.rasi"
						}
					},
					"end": "(\".*?(?<!\\\\)\"|$)",
					"endCaptures": {
						"1": {
							"name": "string.quoted.double.rasi"
						}
					},
					"name": "meta.at-rule.import.rasi",
					"patterns": [
						{
							"begin": "\\G\\s*(?=/\\*)",
							"end": "(?<=\\*/)\\s*",
							"patterns": [
								{
									"include": "#comments"
								}
							]
						}
					]
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.rasi",
					"match": "\\b(if|while|for|return)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.rasi",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.rasi",
					"match": "\\\\."
				}
			]
		}
	}
}